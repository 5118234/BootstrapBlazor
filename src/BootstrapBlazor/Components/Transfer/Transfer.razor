@namespace BootstrapBlazor.Components
@inherits TransferBase

<div @attributes="@AdditionalAttributes" class="transfer">
    <TransferPanel @ref="LeftPanel" Items="@LeftItems" Text="@LeftPanelText" IsDisabled="@IsDisabled"
                   ShowSearch="@ShowSearch" SearchPlaceHolderString="@LeftPannelSearchPlaceHolderString"
                   OnSelectedItemsChanged="@OnSelectedItemsChanged">
    </TransferPanel>
    <div class="transfer-buttons">
        <button class="btn btn-primary" disabled="@GetButtonState(RightItems)" @onclick="e => Transfer(RightItems, LeftItems)">
            <i class="fa fa-angle-left"></i>
            <span class="@LeftButtonClassName">@LeftButtonText</span>
        </button>
        <button class="btn btn-primary" disabled="@GetButtonState(LeftItems)" @onclick="e => Transfer(LeftItems, RightItems)">
            <span class="@RightButtonClassName">@RightButtonText</span>
            <i class="fa fa-angle-right"></i>
        </button>
    </div>
    <TransferPanel @ref="RightPanel" Items="@RightItems" Text="@RightPanelText" IsDisabled="@IsDisabled"
                   ShowSearch="@ShowSearch" SearchPlaceHolderString="@RightPannelSearchPlaceHolderString"
                   OnSelectedItemsChanged="@OnSelectedItemsChanged">
    </TransferPanel>
</div>