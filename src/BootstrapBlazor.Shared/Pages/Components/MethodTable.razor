<div class="table-attr d-none d-md-block">
    <h4>方法 Methods</h4>

    <Table TItem="BootstrapBlazor.Shared.Common.MethodItem" Items="Items">
        <HeaderTemplate>
            <TableColumn TItem="string" @bind-Field="@context.Name" />
            <TableColumn TItem="string" @bind-Field="@context.Description" />
            <TableColumn TItem="string" @bind-Field="@context.Parameters" />
            <TableColumn TItem="string" @bind-Field="@context.ReturnValue" />
        </HeaderTemplate>
        <RowTemplate>
            <TableCell>@context.Name</TableCell>
            <TableCell>@context.Description</TableCell>
            <TableCell>@context.Parameters</TableCell>
            <TableCell>@context.ReturnValue</TableCell>
        </RowTemplate>
    </Table>
</div>

@code {
    [Parameter] public IEnumerable<MethodItem>? Items { get; set; }
}
