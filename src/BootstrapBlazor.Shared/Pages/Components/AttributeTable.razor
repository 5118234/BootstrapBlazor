<div class="table-attr d-none d-md-block">
    <h4>@Title</h4>

    <Table TItem="BootstrapBlazor.Shared.Common.AttributeItem" Items="Items" class="table-demo">
        <HeaderTemplate>
            <TableColumn TItem="string" @bind-Field="@context.Name" />
            <TableColumn TItem="string" @bind-Field="@context.Description" />
            <TableColumn TItem="string" @bind-Field="@context.Type" />
            <TableColumn TItem="string" @bind-Field="@context.ValueList" />
            <TableColumn TItem="string" @bind-Field="@context.DefaultValue" />
        </HeaderTemplate>
        <RowTemplate>
            <TableCell>@context.Name</TableCell>
            <TableCell>@context.Description</TableCell>
            <TableCell>@context.Type</TableCell>
            <TableCell>@context.ValueList</TableCell>
            <TableCell>@context.DefaultValue</TableCell>
        </RowTemplate>
    </Table>
</div>

@code {
    [Parameter] public IEnumerable<AttributeItem>? Items { get; set; }
}
