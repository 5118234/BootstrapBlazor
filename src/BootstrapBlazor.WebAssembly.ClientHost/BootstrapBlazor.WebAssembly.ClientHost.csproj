<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <RazorLangVersion>3.0</RazorLangVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="3.2.0" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Build" Version="3.2.0" PrivateAssets="all" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="3.2.0" PrivateAssets="all" />
        <PackageReference Include="System.Net.Http.Json" Version="3.2.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\BootstrapBlazor.Shared\BootstrapBlazor.Shared.csproj" />
    </ItemGroup>

    <ItemGroup>
        <WwwrootFiles Include="$(MSBuildThisFileDirectory)..\BootstrapBlazor.Server\wwwroot\**\*.*" />
        <WwwrootUnixFiles Include="$(MSBuildThisFileDirectory)../BootstrapBlazor.Server/wwwroot/**/*.*" />
    </ItemGroup>

    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
        <Message Text="Copy wwwroot -> $(ProjectDir)" Importance="high" />
        <Copy Condition="'$(OS)' == 'Windows_NT'" SourceFiles="@(WwwrootFiles)" DestinationFolder="$(ProjectDir)\wwwroot\%(RecursiveDir)" SkipUnchangedFiles="true" />
        <Copy Condition="'$(OS)' == 'UNIX'" SourceFiles="@(WwwrootUnixFiles)" DestinationFolder="$(ProjectDir)/wwwroot/%(RecursiveDir)" SkipUnchangedFiles="true" />
    </Target>

</Project>
